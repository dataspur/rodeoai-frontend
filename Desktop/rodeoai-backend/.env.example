# ===========================================
# RodeoAI Backend Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# -------------------------------------------
# Required Configuration
# -------------------------------------------

# OpenAI API Key (required for chat functionality)
OPENAI_API_KEY=sk-your-openai-api-key-here

# -------------------------------------------
# Server Configuration
# -------------------------------------------

# Server port (default: 8000)
PORT=8000

# Environment: development, staging, production
ENVIRONMENT=development

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# -------------------------------------------
# CORS Configuration
# -------------------------------------------

# Allowed origins for CORS (comma-separated, or * for all)
# Examples:
#   CORS_ORIGINS=*
#   CORS_ORIGINS=http://localhost:3000,https://rodeoai.com
CORS_ORIGINS=*

# -------------------------------------------
# Rate Limiting
# -------------------------------------------

# Maximum requests per period
RATE_LIMIT_REQUESTS=100

# Rate limit period in seconds
RATE_LIMIT_PERIOD=60

# -------------------------------------------
# Scraping Configuration
# -------------------------------------------

# Default timeout for scraping operations (seconds)
SCRAPE_TIMEOUT=30

# Run browsers in headless mode (true/false)
SCRAPE_HEADLESS=true

# Maximum concurrent scraping sessions
SCRAPE_MAX_CONCURRENT=5

# User agent string for scraping
SCRAPE_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# -------------------------------------------
# Browser Configuration (Playwright/Selenium)
# -------------------------------------------

# Browser to use: chromium, firefox, webkit
BROWSER_TYPE=chromium

# Browser executable path (optional, leave empty for default)
BROWSER_EXECUTABLE_PATH=

# -------------------------------------------
# Caching (Optional - Redis)
# -------------------------------------------

# Enable caching (true/false)
CACHE_ENABLED=false

# Redis URL (if caching enabled)
# REDIS_URL=redis://localhost:6379/0

# Cache TTL in seconds (default: 5 minutes)
CACHE_TTL=300

# -------------------------------------------
# Security
# -------------------------------------------

# API key for scraping endpoints (optional, leave empty to disable)
# API_KEY=your-secret-api-key

# Secret key for JWT tokens (if implementing auth)
# SECRET_KEY=your-super-secret-key-here

# -------------------------------------------
# External Services (Optional)
# -------------------------------------------

# Proxy URL for scraping (optional)
# PROXY_URL=http://user:pass@proxy.example.com:8080

# Anthropic API Key (for Claude integration)
# ANTHROPIC_API_KEY=sk-ant-your-key-here
